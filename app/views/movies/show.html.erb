    <div class="row">
      <div class="col-sm-6">
        <div class="rating-block">
          <h4>
            <%= @movie.title %>
            <% if @movie.genre %>
              <small>
                <span class="label label-info">
                  <%= @movie.genre %>
                </span>
              </small>
              &nbsp;
            <% end %>

            <% if @movie.year %>
              <small>
                <span class="label label-danger">
                  <%= @movie.year.strftime('%Y') %>
                </span>
              </small>
              &nbsp;
            <% end %>

            <% if @movie.price %>
              <small>
                <span class="label label-success">
                  $<%= @movie.price / 100.0 %>
                </span>
              </small>
            <% end %>
          </h4>
          <p class="card-text"><%= @movie.studio %></p>
          <div class='total_rating'>
            <%= render 'total_rating' %>
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class='breakdown'>
          <%= render 'breakdown' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <hr/>
        <div class="review-block">
          <% @movie.comments.each do |comment| %>
            <div class="row">
              <div class="col-sm-3">
                <img src="http://dummyimage.com/60x60/666/ffffff&text=No+Image" class="img-rounded">
